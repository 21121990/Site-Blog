<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-primary" href="/admin/categories/new">Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(categories => {%>
            <tr>
                <th><%= categories.id %></th>
                <th><%= categories.title %></th>
                <th><%= categories.slug %></th>
                <th>

                    <a href="/admin/categories/edit/<%= categories.id %>" class="btn btn-primary">Editar</a>

                    <form onsubmit="confirmarDelecao(event, this)" method="POST" action="/categories/delete"
                        style="display: inline;">
                        <input type="hidden" name="id" value="<%= categories.id %>">
                        <button class="btn btn-primary">Deletar</button>
                    </form>
                </th>
            </tr>
            <%})%>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        var decision = confirm("Você deseja realmente exlcuir?");
        if (decision) {
            form.submit();
        }
    }
</script>